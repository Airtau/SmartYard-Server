[Unit]
Description=MongoDB NoSQL database.
After=network.target

[Service]
Type=simple
Environment=HOME=/var/lib/mongodb
WorkingDirectory=/var/lib/mongodb
User=mongodb
Group=mongodb
ExecStart=/bin/chown -R mongodb:mongodb /var/{lib,run}/mongodb ; /opt/mongodb/bin/mongod --dbpath /var/lib/mongodb --directoryperdb --pidfilepath /var/run/mongodb/mongodb.pid
LimitCORE=infinity
Restart=always
RestartSec=4
StandardOutput=null
PrivateTmp=true

[Install]
WantedBy=multi-user.target
