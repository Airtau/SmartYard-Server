server {
# IPv4
        listen 443 ssl http2;
# IPv6
#        listen [::]:443 ssl http2;

        ssl_certificate /etc/ssl/cert.pem;
        ssl_certificate_key /etc/ssl/key.pem;

        server_name m.example.com;

        client_max_body_size 100M;

        location / {
                root /opt/m/dist;
                try_files $uri $uri/ =404;
        }

        location /.well-known {
                root /var/www/html;
        }
}
